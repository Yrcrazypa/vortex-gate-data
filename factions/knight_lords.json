  "rules": {
    "legend_lotl": {
      "name": "Leader of the Lesser",
      "description": "When this unit is activated, choose up to 2 _Armiger_ units within 6\".  They may reroll skill checks of 9+ when making Fight or _Shoot_ actions",
      "points": 10
    },
    "legend_enhanced_servos": {"name": "Enhanced Servos", "description": "This model gains +2 to its Movement", "points": 10}
  },
  "strategies": {
    "ion_shields": {
      "phase": "activation",
      "name": "Ion Shields",
      "description": "Use this strategy when one of your units is targeted by an attack. Roll a die for each hit, on a 3 or less that hit is prevented.",
      "flavor": "Knight Lords are equipped with powerful ion shields which allow them to deflect the heaviest of firepower.",
      "cost": 2
    },
    "heroic_moment": {
      "phase": "activation",
      "name": "Heroic Moment",
      "description": "Use when a unit shoots or fights. That unit may re-roll failed skill tests of 9+.",
      "flavor": "Each Knight Lord is a hero which can take on the mightiest of foes.",
      "cost": 1
    },
    "final_stand": {
      "phase": "activation",
      "name": "Final Stand",
      "description": "Use when a unit is destroyed. If that unit has not activated yet this round, it may perform one shoot or _Fight_ action before it is destroyed.",
      "flavor": "A Knight Lord fights to the last breath.",
      "cost": 1
    }
  },

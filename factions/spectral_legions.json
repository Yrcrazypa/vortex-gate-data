    }
  },
  "strategies": {
    "accursed_blades": {
      "name": "Accursed Blades",
      "phase": "activation",
      "description": "Use before an _Infantry_ unit makes a melee attack. Succesful hits have +1 AP.",
      "flavor": "The rusted blades of the haunted ghosts are covered in ancient curses that inflict immense pain on any target they strike.",
      "cost": 1
    },
    "flicker": {
      "name": "Flicker",
      "phase": "activation",
      "description": "Use when one of your units is targeted by an attack. Roll a die for each hit, on a 3 or less that hit is prevented.",
      "flavor": "The ghastly hordes flicker between the realms, making lethal strikes fade through them with ease.",
      "cost": 1
    },
    "fearless": {
      "name": "Fearless",
      "phase": "activation",
      "description": "Use before activating a unit. That unit may immediately remove up to 2 Shock.",
      "flavor": "With no morale to break, the ghastly hordes march forward even in the face of sure death.",
      "cost": 1
    }
